<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   <context:component-scan base-package="com.learning.spring.basics.CDI.basics"/>

   <bean id = "xmlJdbcConnection" class = "com.learning.spring.basics.springbasics.scope.tutorial.XmlJDBCConnection">
   </bean>
   
   <bean id = "xmlPersonDAO" class = "com.learning.spring.basics.springbasics.scope.tutorial.XmlPersonDAO">
   	<property name="xmlJdbcConnection" ref="xmlJdbcConnection"/>
   </bean>

</beans>